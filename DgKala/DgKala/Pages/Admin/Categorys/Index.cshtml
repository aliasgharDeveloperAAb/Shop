@page
@using DgKala.Models.Entities.Category
@model DgKala.Pages.Admin.Categorys.IndexModel
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست محصولات </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست محصولات  سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0">
                    <a asp-page="CreateCategory" class=" btn btn-outline btn-success">افزودن محصول جدید  </a>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر </th>
                            <th>نام محصول</th>
                            <th>تعداد محصول</th>
                            <th>دستورات </th>



                        </tr>
                    </thead>
                    @foreach (var item in Model.ListCategory) 
                    {
                        <tr>
                            <td>
                                <img src="/Category/thumb/@item.CategoryImageName"class="thumbnail"/>
                            </td>
                            <td>@item.Title</td>
                            <td>@item.CategoryCount</td>


                         

                       
                            <td>
                                <a href="/Admin/Categorys/EditCategory/@item.CategoryId" class="btn btn-warning btn-sm">
                                    ویرایش

                                </a>
                              
                            </td>

                        </tr>
                    }
                    <tbody>
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>

