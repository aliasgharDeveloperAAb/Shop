@page "{id?}"
@model DgKala.Pages.Admin.Categorygroups.IndexModel
@{
    ViewData["Title"] = "لیست گروه  ها ";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست گروه ها  </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12"> 
        <div class="panel panel-primary">
            <div class="panel-heading">
                لیست گروه های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    </div>

                    <div class="row" style="margin: 10px 0">

                        <div class="col-md-12" style="margin: 10px 0">
                            <a asp-page="CreateGroup" class=" btn btn-success">افزودن گروه جدید  </a>
                        </div>

                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان گروه  </th>
                                    <th>زیر گروه  </th>

                                    <th>دستورات </th>



                                </tr>
                            </thead>
                            @foreach (var group in Model.CategorygroupsList.Where(g => g.ParentID == null))
                            {
                                <tr>
                                    <td>@group.GroupTitle</td>
                                    <td>
                                        @if (group.CategoryGroupsList.Any())
                                        {
                                            <ul>
                                                @foreach (var sub in group.CategoryGroupsList)
                                                {
                                                    <li>
                                                        @sub.GroupTitle -  <a href="/Admin/CategoryGroups/EditGroup/@sub.GroupId" class="btn btn-warning btn-xs"style="margin: 10px 0">
                                                            ویرایش
                                                             
                                                        </a>
                                                    </li> 
                                                }
                                            </ul>
                                        }

                                    </td>

                                    <td>
                                        <a href="/Admin/CategoryGroups/EditGroup/@group.GroupId" class="btn btn-warning btn-sm">
                                            ویرایش

                                        </a>
                                        <a href="/Admin/Categorygroups/CreateGroup/@group.GroupId" class="btn btn-info btn-sm">
                                            زیر گروه

                                        </a>
                                    </td> 

                                </tr>
                            }
                            <tbody>
                            </tbody>
                        </table>

                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
