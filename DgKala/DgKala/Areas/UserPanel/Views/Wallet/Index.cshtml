@using DgKala.Models.Entities.Wallet
@using DgKala.Models.ViewModels.WalletViewModel
@using DgKala.Convertors
@model DgKala.Models.ViewModels.WalletViewModel.ChargeWalletViewModel
@{
    ViewData["Title"] = "کیف پول شما ";
}

<div class="container">

    <main class="profile-user-page default">
        <p></p>
        <div class="container">
            <div class="row">

                <div class="profile-page col-xl-9 col-lg-8 col-md-12 order-2">
                    <div class="row">
                        <div class="col-12">
                            <div class="col-12">
                                <h1 class="title-tab-content">ویرایش کلمه عبور </h1>
                            </div>
                            <div class="content-section default">
                                <div class="row">
                                    <div class="col-12">
                                        <h1 class="title-tab-content">کلمه عبور </h1>
                                    </div>
                                </div>

                                <form asp-action="Index" method="post">




                                    <div class="row">
                                        <div class="col-sm-12 col-md-6">
                                            <div class="form-account-title">مبلغ </div>
                                            <div class="form-account-row">
                                                <input asp-for="Amount" class="input-field text-right " type="number" placeholder="مبلغ به تومان ">
                                                <span asp-validation-for="Amount" class="text-danger"></span>
                                            </div>
                                        </div>




                                    </div>
                                    <div class="col-12 no-padding">
                                    </div>
                                    <div class="col-12 text-center">
                                        <input type="submit" class="btn btn-default btn-lg" value="شارژ کیف پول " />



                                    </div>

                                </form>
                                <hr />
                                <table class="table table-bordered">
                                    <tr>
                                        @{
                                            List<WalletViewModel> list = ViewBag.listWallet as List<WalletViewModel>;
                                        }
                                        <th>مبلغ</th>
                                        <th>تاریخ </th>
                                        <th>نوع تراکنش </th>

                                        <th>شرح </th>

                                    </tr>
                                    @foreach (var item in list)
                                    {
                                        <tr>
                                            <td>@item.Amount</td>
                                            <td>@item.Datetime.ToShamsi()</td>

                                            <td>
                                                @if (item.Type == 1)
                                                {
                                                    <div class="text-success">واریز به حساب </div>
                                                }
                                                else
                                                {
                                                    <div class="text-danger"> برداشت از حساب </div>
                                                }
                                            </td>

                                            <td>@item.Description</td>

                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <partial name="_SiteBar" />
            </div>
        </div>
    </main>
</div>

