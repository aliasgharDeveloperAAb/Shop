@model DgKala.Models.ViewModels.AccountViewModel.ForgotPasswordViewModel
<div class="wrapper default">
    <div class="container">
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p>ایمیل بازیابی کلمه عبور  برای شما ارسال شد  </p>
              
                </div>
          
        }
     
        <div class="row">
            <div class="main-content col-12 col-md-7 col-lg-5 mx-auto">
                <div class="account-box">
                    <a href="/" class="logo">
                        <img src="assets/img/logo.png" alt="">
                    </a>



                    <div  class="account-box-title text-right">بازیابی کلمه عبور </div>
                    <div class="account-box-content">



                        <form asp-action="ForgotPassword" method="post">
                            <div class="form-account-title">ایمیل</div>
                            <div class="form-account-row">
                                <label class="input-label"><i class="now-ui-icons users_single-02"></i></label>
                                <input  asp-for="Email" class="input-field" type="text" placeholder="ایمیل  خود را وارد نمایید">
                            </div>
                          
                          
                            <div class="form-account-row form-account-submit">
                                <div class="parent-btn">
                                    <button class="dk-btn dk-btn-info">
                                       تایید وارسال 
                                        <i class="fa fa-sign-in"></i>
                                    </button>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>

                       
                        </form>
                    </div>
                  
                </div>
            </div>
        </div>
    </div>


</div>
